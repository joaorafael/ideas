<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Driving Ideas - @ViewBag.Title</title>
    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
    <div id="page">
        <header>
            <div id="top">
                <div id="loginfo">
                    @Html.Partial("_LogOnPartial")
                </div>
            </div>
            <div id="bar" class="centered">
                <a href="@Url.Action("Index", "Home")">
                    <img src="@Url.Content("~/Content/images/logo.png")" alt="driving Ideas" title="driving Ideas" />
                </a>
                @if (IsSectionDefined("Nav"))
                {
                    @RenderSection("Nav")
                } else {
                    @Html.Partial("_Nav", "")
                }
            </div>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
            <div id="bottom" class="centered">
                <div class="left">
                    <a href="@Url.Action("Index", "Home")">
                        <img src="@Url.Content("~/Content/images/logoarmis.png")" alt="www.armis.pt" title="www.armis.pt" />
                    </a>
                </div>
                <div class="middle"> 
                    @Html.ActionLink("início", "Index", "Home") <em>|</em>
                    @Html.ActionLink("as minhas ideias", "Index", "User") <em>|</em>
                    @Html.ActionLink("estatísticas", "Index", "Stats") 
                </div>
                <div class="right">
                    @Html.ActionLink("sugestões", "Index", "User") <em>|</em>
                    @Html.ActionLink("ajuda", "Help", "Account")
                </div>
            </div>
        </footer>
    </div>
</body>
</html>
